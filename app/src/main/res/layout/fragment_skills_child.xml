<com.y2thez.cyberpad.widgets.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.y2thez.cyberpad.fragments.SkillsChildFragment">

    <Button
        android:id="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/green_blue"
        android:background="@drawable/button_bg"
        android:text="View Abilities"
        android:textStyle="bold"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skillsRecyclerView"
        android:layout_below="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.y2thez.cyberpad.widgets.SlidingRelativeLayout>
